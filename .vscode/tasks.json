{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "js-beautify",
            "type": "shell",
            "command": "js-beautify",
            "args": [
                "--replace",
                "index.html",
                "css/styles.css",
                "js/script.js"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        }
    ]
}
